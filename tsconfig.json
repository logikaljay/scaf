{
  "compilerOptions": {
    "target": "es6",
    "module": "nodenext",
    "declaration": true,
    "noEmit": true,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src"]
}
